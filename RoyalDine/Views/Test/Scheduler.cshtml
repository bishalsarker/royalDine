@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <title>RoyalDine&trade; | Manager</title>
</head>
<body>
    <nav class="nav navbar-default" style="background-color: maroon;">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#" style="color: whitesmoke;">RoyalDine&trade;</a>
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav navbar-right">
                <li><a href="#" style="color:white;">Home</a></li>
                <li><a href="#" style="color:white;">Schedules</a></li>
                <li><a href="#" style="color:white;">Stats</a></li>
                <li><a href="#" style="color:white;">Preferences</a></li>
                <li><a href="#" style="color:white;">Logout</a></li>
            </ul>
        </div>
    </nav>

    <div class="container">
        <h1>Bazar Schedules</h1>
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <button class="btn btn-primary" data-toggle="modal" data-target="#scheduler">Modify</button>
            </div>
            <br />
            <div class="col-lg-5 col-md-12 col-sm-12">
                <table class="table table-bordered">
                    <tr>
                        <td><b>Day</b></td>
                        <td><b>Member</b></td>
                    </tr>
                    <tr>
                        <td>Saturday</td>
                        <td><span class="text-success">Sabbir</span></td>
                    </tr>
                    <tr>
                        <td>Sunday</td>
                        <td><span class="text-success">Bishal</span></td>
                    </tr>
                    <tr>
                        <td>Monday</td>
                        <td><span class="text-danger">--</span></td>
                    </tr>
                    <tr>
                        <td>Tuesday</td>
                        <td><span class="text-danger">--</span></td>
                    </tr>
                    <tr>
                        <td>Wednesday</td>
                        <td><span class="text-danger">--</span></td>
                    </tr>
                    <tr>
                        <td>Thursday</td>
                        <td><span class="text-danger">--</span></td>
                    </tr>
                    <tr>
                        <td>Friday</td>
                        <td><span class="text-danger">--</span></td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
    <br />
    <br />
    <footer class="text-center">
        <hr />
        <p class="text-muted">Copyright &copy; 2018 Sanvi Tech</p>
    </footer>

    <div class="modal fade" id="scheduler" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h3>Modify Schedule</h3>
                </div>
                <div class="modal-body">
                    <div class="container" style="margin-left: 5%; margin-right: 5%;">
                        <div class="form-group">
                            <p><b>Day</b></p>
                            <select class="form-control">
                                <option selected disabled>Select a day</option>
                                <option>Saturday</option>
                                <option>Saturday</option>
                                <option>Saturday</option>
                                <option>Saturday</option>
                            </select>
                            <br />

                            <p><b>Member</b></p>
                            <div class="form-group">
                                <select class="form-control">
                                    <option selected disabled>Select a member</option>
                                    <option>Sabbir</option>
                                    <option>Bishal</option>
                                    <option>Koushik</option>
                                    <option>Didar</option>
                                </select>
                            </div>
                        <div class="text-left">
                            <input type="button" id="submitInfo" value="Set Schedule" class="btn btn-success" />
                        </div>
                    </div>
                </div>
                <div class="modal-footer"></div>
            </div>
        </div>
    </div>
</body>
</html>
