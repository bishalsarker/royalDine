@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <title>RoyalDine&trade; | Manager</title>
</head>
<body>
    @{
        int b = 3;
        int l = 4;
        int d = 5;
        int total = b + l + d;
    }
    <nav class="nav navbar-default" style="background-color: maroon;">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#" style="color: whitesmoke;">RoyalDine&trade;</a>
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav navbar-right">
                <li><a href="#" style="color:white;">Home</a></li>
                <li><a href="#" style="color:white;">Schedules</a></li>
                <li><a href="#" style="color:white;">Stats</a></li>
                <li><a href="#" style="color:white;">Preferences</a></li>
                <li><a href="#" style="color:white;">Logout</a></li>
            </ul>
        </div>
    </nav>

    <div class="container">
        <div class="row" id="mealTab">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <h1>Today's Meal <span class="badge">@total</span></h1>
                <hr />
                <div style="padding-left:5px; padding-right:5px;">
                    <p><b>Today: <span class="text-warning">20 January, 2018 | 10:55 PM</span> </b></p>
                    @{
                        if (total < 1)
                        {
                            <h4 class="text-danger">No meal has placed today!</h4>
                        }
                        else
                        {
                            <div class="row">
                                <div class="col-lg-4 col-md-12 col-sm-12">
                                    <div class="panel panel-info">
                                        <div class="panel panel-heading">
                                            <h4>Breakfast <span class="badge">@b</span></h4>
                                        </div>
                                        <div class="panel panel-body" style="padding-top:0px;">
                                            @{
                                            if (b < 1)
                                            {
                                                <h4 class="text-danger">No one wants to have breakfast!</h4>
                                                <button class="btn btn-danger" data-toggle="modal" data-target="#mealAdderSelf">Add my meal</button>
                                            }
                                            else
                                            {
                                                <p class="text-success"><b>Members</b> <span class="badge">2</span></p>
                                                <span class="label label-danger">Bishal</span>
                                                <span class="label label-danger">Sabbir</span>
                                                <p class="text-success" style="padding-top: 10px;"><b>Guest</b> <span class="badge">1</span></p>
                                            }
                                            }
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-4 col-md-12 col-sm-12">
                                    <div class="panel panel-info">
                                        <div class="panel panel-heading">
                                            <h4>Lunch <span class="badge">@l</span></h4>
                                        </div>
                                        <div class="panel panel-body" style="padding-top:0px;">
                                            @{
                                            if (l < 1)
                                            {
                                                <h4 class="text-danger">No one wants to have lunch!</h4>
                                            }
                                            else
                                            {
                                                <p class="text-success"><b>Members</b> <span class="badge">3</span></p>
                                                <span class="label label-danger">Bishal</span>
                                                <span class="label label-danger">Sabbir</span>
                                                <span class="label label-danger">Didar</span>
                                                <p class="text-success" style="padding-top: 10px;"><b>Guest</b> <span class="badge">1</span></p>
                                            }
                                            }
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-4 col-md-12 col-sm-12">
                                    <div class="panel panel-info">
                                        <div class="panel panel-heading">
                                            <h4>Dinner <span class="badge">@d</span></h4>
                                        </div>
                                        <div class="panel panel-body" style="padding-top:0px;">
                                            @{
                                            if (d < 1)
                                            {
                                                <h4 class="text-danger">No one wants to have Dinner!</h4>
                                            }
                                            else
                                            {
                                                <p class="text-success"><b>Members</b> <span class="badge">4</span></p>
                                                <span class="label label-danger">Bishal</span>
                                                <span class="label label-danger">Sabbir</span>
                                                <span class="label label-danger">Didar</span>
                                                <span class="label label-danger">Koushik</span>
                                                <p class="text-success" style="padding-top: 10px;"><b>Guest</b> <span class="badge">1</span></p>
                                            }
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
    <br />
    <br />
    <footer class="text-center">
        <hr />
        <p class="text-muted">Copyright &copy; 2018 Sanvi Tech</p>
    </footer>

    <div class="modal fade" id="ancForm" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h3>Announcement</h3>
                </div>
                <div class="modal-body">
                    <div class="container" style="margin-left: 5%; margin-right: 5%;">
                        <div class="form-group">
                            <input class="form-control" />
                        </div>
                        <div class="text-right">
                            <input type="button" id="submitInfo" value="Post" class="btn btn-success" />
                        </div>
                    </div>
                </div>
                <div class="modal-footer"></div>
            </div>
        </div>
    </div>
    
</body>
</html>
