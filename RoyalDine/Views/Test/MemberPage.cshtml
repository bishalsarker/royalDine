
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <title>RoyalDine&trade; | Home</title>
</head>
<body>
    @{
        int self = 0;
        int guest = 0;
        int total = self + guest;
        string acc_type = "m";
    }
    <nav class="nav navbar-default" style="background-color: maroon;">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#" style="color: whitesmoke;">RoyalDine&trade;</a>
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav navbar-right">
                <li><a href="#" style="color:white;">Home</a></li>
                @{
                    if (acc_type.Equals("m"))
                    {
                        <li><a href="#" style="color:white;">Manager</a></li>
                    }
                }
                <li><a href="#" style="color:white;">Stats</a></li>
                <li><a href="#" style="color:white;">Settings</a></li>
                <li><a href="#" style="color:white;">Logout</a></li>
            </ul>
        </div>
    </nav>

    <div class="container">
        <div class="row" id="msgTab">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <br />
                <div class="alert alert-success"><b>No messages for you today!</b> </div>
            </div>
        </div>
        <div class="row" id="mealTab">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <h1>Today's Meal <span class="badge">@total</span></h1>
                <hr />
                <div style="padding-left:5px; padding-right:5px;">
                    <p><b>Today: <span class="text-warning">20 January, 2018 | 10:55 PM</span> </b></p>
                <div class="row">
                    <div class="col-lg-6 col-md-12 col-sm-12">
                        <div class="panel panel-info">
                            <div class="panel panel-heading">
                                <h4>My Meal <span class="badge">@self</span></h4>
                            </div>
                            <div class="panel panel-body" style="padding-top:0px;">
                                @{
                                    if (self < 1)
                                    {
                                        <h4 class="text-danger">No meal is for you today!</h4>
                                        <p><a href="#">Click Here</a>, for meal schedules.</p>
                                    }
                                    else
                                    {
                                        <p><b>Breakfast: <span class="text-danger">No</span></b></p>
                                        <p><b>Lunch: <span class="text-danger">No</span></b></p>
                                        <p><b>Dinner: <span class="text-success">Yes</span></b></p>
                                        <button class="btn btn-warning" data-toggle="modal" data-target="#mealEditor">Modify</button>
                                        <button class="btn btn-danger">Cancel</button>
                                        <p><a href="#">Click Here</a>, for meal schedules.</p>
                                    }
                                 }
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-12 col-sm-12">
                        <div class="panel panel-info">
                            <div class="panel panel-heading">
                                <h4>Guest Meal <span class="badge">@guest</span></h4>
                            </div>
                            <div class="panel panel-body" style="padding-top:0px;">
                                @{
                                    if (guest < 1)
                                    {
                                        <h4 class="text-danger">Anyone's coming to home?</h4>
                                        <button class="btn btn-danger" data-toggle="modal" data-target="#mealAdderGuest">Add guest meal</button>
                                    }
                                    else
                                    {
                                        <p><b>Breakfast: <span class="text-danger">0</span></b></p>
                                        <p><b>Lunch: <span class="text-success">1</span></b></p>
                                        <p><b>Dinner: <span class="text-success">2</span></b></p>
                                        <button class="btn btn-success" data-toggle="modal" data-target="#mealAdderGuest">Add more</button>
                                        <button class="btn btn-primary" onclick="window.location.href='../Test/GuestViewer'">Details</button>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </div>
    </div>         
</div>
</div>
</div>

    <footer class="text-center">
    <hr />
    <p class="text-muted">Copyright &copy; 2018 Sanvi Tech</p>
    </footer>

    <div class="modal fade" id="mealAdderSelf" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h3>Add a meal</h3>
                </div>
                <div class="modal-body">
                    <div class="container" style="margin-left: 5%; margin-right: 5%;">
                        <div class="alert alert-warning hidden" id="addInfoAlert"></div>
                        <input type="checkbox" name="b" value="B"> Breakfast<br>
                        <input type="checkbox" name="l" value="L"> Lunch<br>
                        <input type="checkbox" name="d" value="D"> Dinner<br>
                        <div class="text-center">
                            <input type="button" id="submitInfo" value="Add" class="btn btn-success" />
                        </div>
                    </div>
                </div>
                <div class="modal-footer"></div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="mealAdderGuest" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h3>Add a guest meal</h3>
                </div>
                <div class="modal-body">
                    <div class="container" style="margin-left: 5%; margin-right: 5%;">
                        <div class="alert alert-warning hidden" id="addInfoAlert"></div>
                        <input type="checkbox" name="b" value="B"> Breakfast<br>
                        <input type="checkbox" name="l" value="L"> Lunch<br>
                        <input type="checkbox" name="d" value="D"> Dinner<br>
                        <div class="text-center">
                            <input type="button" id="submitInfo" value="Add guest" class="btn btn-success" />
                        </div>
                    </div>
                </div>
                <div class="modal-footer"></div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="mealEditor" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h3>Modify my meal</h3>
                </div>
                <div class="modal-body">
                    <div class="container" style="margin-left: 5%; margin-right: 5%;">
                        <div class="alert alert-warning hidden" id="addInfoAlert"></div>
                        <input type="checkbox" name="b" value="B"> Breakfast<br>
                        <input type="checkbox" name="l" value="L"> Lunch<br>
                        <input type="checkbox" name="d" value="D"> Dinner<br>
                        <div class="text-center">
                            <input type="button" id="submitInfo" value="Save Changes" class="btn btn-success" />
                        </div>
                    </div>
                </div>
                <div class="modal-footer"></div>
            </div>
        </div>
    </div>
</body>
</html>
