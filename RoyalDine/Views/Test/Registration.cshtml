@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <title>RoyalDine&trade; | Registration</title>
</head>
<body>
    <nav class="nav navbar-default" style="background-color: maroon; color: whitesmoke; ">
        <div class=" navbar-header">
            <a href="../User/Index" class="navbar-brand" style="color: whitesmoke;">
                <h4>RoyalDine&trade;</h4>
            </a>
        </div>
    </nav>
    <div class="container">
        <div class="row">
            <div class="col-sm-6" style="padding: 30px;">
                <h3 class="text-muted">Sign up to RoyalDine&trade;</h3>
                <div class="panel panel-info">
                        <div class="panel-body" style="padding: 30px;">
                            <div class=" form-group">
                                <input type="text" name="Un" class="form-control" placeholder="Fullname" />
                            </div>
                            <div class="form-group">
                                <input type="text" name="Uu" class="form-control" placeholder="Username" />
                            </div>
                            <div class="form-group">
                                <input type="text" name="Ue" class="form-control" placeholder="Email" />
                            </div>
                            <div class="form-group">
                                <input type="text" name="Up" class="form-control" placeholder="Password" />
                            </div>
                            <div class="form-group">
                                <input type="text" name="Ur" class="form-control" placeholder="Retype-Password" />
                            </div>
                            <input type="submit" class="btn btn-success" value="Register" />
                        </div>
                </div>
            </div>
        </div>
    </div>
    <footer class="text-center">
        <hr />
        <p class="text-muted">Copyright &copy; 2018 Sanvi Tech</p>
    </footer>
</body>
</html>
